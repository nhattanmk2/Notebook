<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:strokeColor="#6ec8e9"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bottom_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/words"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/right_border"
                android:gravity="center|left"
                android:text="TextView 1" />

            <TextView
                android:id="@+id/spellings"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|left"

                android:text="TextView 2" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/synonyms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Synonyms of words"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:lineSpacingExtra="8dp"
                android:breakStrategy="balanced"/>
            <TextView
                android:id="@+id/antonyms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Antonyms of words"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:lineSpacingExtra="8dp"
                android:breakStrategy="balanced"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/meanings"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:background="@drawable/right_border"
                android:text="TextView"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/favourite"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star"
                    android:background="@drawable/image_boder_1"
                    android:layout_margin="3dp"/>

                <ImageView
                    android:id="@+id/speaker"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/volume"
                    android:background="@drawable/image_boder_1"
                    android:layout_margin="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>