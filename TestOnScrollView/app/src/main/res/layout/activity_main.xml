<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="120dp"
                android:scrollbars="none">

                <!-- Các view khác trong ScrollView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:text="View cố định" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:text="View cố định" />

                </LinearLayout>
            </ScrollView>

            <ScrollView
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/component1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/component1_1"
                            android:layout_width="320dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="5dp"
                            android:gravity="bottom"
                            android:text="Quizlet"
                            android:textColor="@color/white"
                            android:textSize="28dp" />

                        <ImageView
                            android:id="@+id/component1_2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/component1_1"
                            android:src="@drawable/baseline_notifications_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_toRightOf="@id/component1_2"
                            android:gravity="bottom"
                            android:text="1"
                            android:textColor="@color/red" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:paddingBottom="10dp">

                        <EditText
                            android:id="@+id/component2"
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_1"
                            android:drawableLeft="@drawable/baseline_search_24"
                            android:gravity="center|left"
                            android:hint="Học phần, thư mục, từ vựng"
                            android:paddingLeft="20dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/gray" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNV"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:menu="@menu/bottom_menu" />
    </LinearLayout>
</layout>