<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/setting_dialog_background"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/cp1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Cài đặt"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@id/cp2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cp2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Câu hỏi"
            android:textSize="16dp"
            android:gravity="left|center"
            app:layout_constraintBottom_toTopOf="@id/cp3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cp1" />

        <LinearLayout
            android:id="@+id/cp3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@+id/cp4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cp2"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/choose1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Từ vựng"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/choose2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Định nghĩa"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/cp4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Chế độ"
            android:textSize="16dp"
            android:gravity="center|left"
            app:layout_constraintBottom_toTopOf="@id/cp5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cp3" />

        <LinearLayout
            android:id="@+id/cp5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/cp6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cp4"
            >

            <TextView
                android:id="@+id/easy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Dễ"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/medium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Trung bình"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Khó"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/cp6"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Đặt lại Các câu hỏi"
            android:textColor="@color/blue"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cp5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>