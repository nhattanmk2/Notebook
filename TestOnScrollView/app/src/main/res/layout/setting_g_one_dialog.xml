<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:background="@drawable/setting_dialog_background"
   >

    <TextView
        android:id="@+id/cp1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Cài đặt"
        android:textSize="24dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/cp2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cp2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Mặt trước"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@id/cp3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp1" />

    <LinearLayout
        android:id="@+id/cp3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toTopOf="@+id/cp4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp2">

        <TextView
            android:id="@+id/choose1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Từ vựng"
            android:textSize="18sp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rectangle_border"/>

        <TextView
            android:id="@+id/choose2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Định nghĩa"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/cp4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Đặt lại Thẻ ghi nhớ"
        android:textSize="20sp"
        android:textColor="@color/blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cp3" />
</androidx.constraintlayout.widget.ConstraintLayout>