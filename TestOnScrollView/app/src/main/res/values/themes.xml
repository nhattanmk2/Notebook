<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TestOnScrollView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/blue</item>
    </style>

    <style name="Theme.TestOnScrollView" parent="Base.Theme.TestOnScrollView" />
    <style name="SlideUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/night_mode</item>
        <item name="colorSwitchThumbNormal">#FFFFFF</item>
        <item name="android:colorForeground">#99FFFFFF</item>
    </style>
</resources>